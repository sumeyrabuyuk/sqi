--veri tabaninizda ?r?nler adinda bir tablo olusturun
 --urun_id ->number
 --urun_adi->VARCHAR(50)
 --fiyat->number
 --(100,cips,5)
 --(200,kola,6)
 
 CREATE TABLE urunler (
 urun_id NUMBER ,
 urun_adi VARCHAR(50),
 fiyat NUMBER
 );
 INSERT INTO urunler (urun_id,urun_adi, fiyat) VALUES (100,'cips',5);
 INSERT INTO urunler (urun_id,urun_adi, fiyat) VALUES (200,'kola',6);
 SELECT * FROM urunler;