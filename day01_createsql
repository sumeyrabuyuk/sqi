--TABLO OLUSTURMA----
CREATE TABLE student
(
id CHAR(4),
name VARCHAR(20),
age NUMBER

);
 --- VER? G?R???----
INSERT INTO student VALUES ('1001','MEHMET','ALA',25) ;
INSERT INTO student VALUES ('1002','AYSE',12);

--tablodan veri sorgulama
SELECT * FROM student;

--tablo silme--
DROP TABLE student;

